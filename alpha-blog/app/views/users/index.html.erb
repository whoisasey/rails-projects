<h1 class="text-center mt-4">Alpha Blog Users</h1>
<div class="apple_pagination ">
  <%= will_paginate @users, :container => false %>
</div>
<div class="container ">
  <% @users.each do |user| %>
    <div class="row justify-content-center d-flex flex-column ">
      <div class="col-8 mt-4 mx-auto">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic"> <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <div class="d-flex justify-content-center">
              <%= link_to 'View Profile', user, class: 'btn btn-outline-primary mx-2' %>
              <%= link_to 'Edit Profile', edit_user_path(user), class: 'btn btn-outline-info mx-2' %>
            </div> 
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago, Updated <%= time_ago_in_words(user.updated_at) %> ago</small>
          </div>
      </div>
    </div>
  <% end %>

<div class="apple_pagination ">
  <%= will_paginate @users, :container => false %>
</div>
</div>